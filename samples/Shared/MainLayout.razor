@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        <a href="https://github.com/Mobsites/Blazor.Icon" target="_blank" class="ml-md-auto pr-2 pr-md-0">
            <img src="_content/Shared/dark-github.png" width="24" height="24" />
        </a>
        <a href="https://github.com/Mobsites" target="_blank" class="pr-2 pr-md-0">
            <img src="_content/Shared/mobsites-logo.png" width="24" height="24" />
        </a>
        <a href="https://github.com/allan-mobley-jr" target="_blank">
            <img src="_content/Shared/me.png" width="24" height="24" />
        </a>
    </div>

    <div class="content px-4">
        <CascadingValue Value="this">
            @Body
        </CascadingValue>
    </div>
</div>

@code {
    public string Image => UseImage ? "_content/Shared/blazor.png" : null;

    private bool useImage;
    public bool UseImage
    {
        get => useImage;
        set 
        {
            useImage = value;
            StateHasChanged();
        }
    }

    private string variant = "alternate_email";
    public string Variant
    {
        get => variant; 
        set
        {
            variant = value;
            StateHasChanged();
        }
    }

    private Icon.Sizes size = Icon.Sizes.SM;
    public Icon.Sizes Size
    {
        get => size;
        set 
        {
            size = value;
            StateHasChanged();
        }
    }

    private string color = "#5c2d91";
    public string Color
    {
        get => color;
        set 
        {
            color = value;
            StateHasChanged();
        }
    }

    private string text = "Blazor";
    public string Text
    {
        get => text;
        set 
        {
            text = value;
            StateHasChanged();
        }
    }

    private int spacing = 10;
    public int Spacing
    {
        get => spacing;
        set 
        {
            spacing = value;
            StateHasChanged();
        }
    }
}
