@page "/"

<h1>Blazor Icon</h1>
<h2 class="pl-5">by <img src="mobsites-logo.png" width="42" height="42" />obsites</h2>
<br />
<div class="row mb-3">
    <div class="col col-sm-8 col-xl-4">
        <p>
            <b>
                NOTE: This demo component is set to keep state. Make some changes,
                reload the page, and see how the changes are maintained.
            </b>
        </p>
        <Icon KeepState 
              Id="Demo" 
              Image="@MainLayout.Image"
              @ref="icon"
              @bind-Variant="@MainLayout.Variant" 
              @bind-Color="@MainLayout.Color"
              @bind-Size="@MainLayout.Size"
              @bind-Text="@MainLayout.Text"
              @bind-Spacing="@MainLayout.Spacing" />
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group">
            <label for="variant">
                Material Icon Variant (see <a href="https://material.io/resources/icons/?style=baseline" target="_blank">here</a> for all the possibilities)
            </label>
            <input class="form-control" 
                id="variant" 
                type="text" 
                value="@MainLayout.Variant" 
                @onchange="@((e) => MainLayout.Variant = e.Value as string)"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group">
            <label for="size">Size</label>
            <select class="form-control pointer-cursor" 
                id="size" 
                @oninput="@((e) => MainLayout.Size = Enum.Parse<Icon.Sizes>(e.Value as string))">
                <option value="@Icon.Sizes.XS" selected=@(MainLayout.Size == Icon.Sizes.XS ? true : false)>XS</option>
                <option value="@Icon.Sizes.SM" selected=@(MainLayout.Size == Icon.Sizes.SM ? true : false)>SM</option>
                <option value="@Icon.Sizes.LG" selected=@(MainLayout.Size == Icon.Sizes.LG ? true : false)>LG</option>
                <option value="@Icon.Sizes.XL" selected=@(MainLayout.Size == Icon.Sizes.XL ? true : false)>XL</option>
            </select>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group">
            <label for="color">Font Color (name, rgb, or hex)</label>
            <input 
                class="form-control" 
                id="color" 
                type="text" 
                value="@MainLayout.Color" 
                @onchange="@((e) => MainLayout.Color = e.Value as string)"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group">
            <label for="text">Accompanying Text</label>
            <input 
                class="form-control" 
                id="text" 
                type="text" 
                value="@MainLayout.Text" 
                @oninput="@((e) => MainLayout.Text = e.Value as string)"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group">
            <label for="spacing">Spacing between (ignored when no text)</label>
            <input 
                class="form-control" 
                id="spacing" 
                type="number" 
                min="0"
                step="1"
                value="@MainLayout.Spacing" 
                @oninput="@((e) => MainLayout.Spacing = int.Parse(e.Value as string))"/>
        </div>
    </div>
</div>
<div class="row">
    <div class="col col-sm-8 col-xl-4">
        <div class="form-group form-check">
            <input checked=@MainLayout.UseImage 
                    type="checkbox" 
                    class="form-check-input pointer-cursor" 
                    id="use-image" 
                    @onchange="@((e) => MainLayout.UseImage = (bool)(e.Value as bool?))" />
            <label class="form-check-label pointer-cursor" for="use-image">Use image instead (<small><b>Not kept in state for this demo!</b></small>)</label>
        </div>
        <div class="form-group">
            <label for="image">
                Image
            </label>
            <input class="form-control" 
                id="image" 
                type="text" 
                value="/blazor.png" 
                readonly />
        </div>
    </div>
</div>
<br />
<div class="row mb-3">
    <div class="col col-sm-8 col-xl-4">
        <p>
            <b>
                * <small><i>This demonstrates the use of this component 
                without a dependency on any of our other components. 
                We, of course, recommend using this component in conjunction with our other components 
                as they work seamlessly together and can benefit one another, 
                not to mention there are often less css adjustments to incorporate.
                But if you want to go solo, check out the source code for this demo</i> 
                <a target="_blank" href="https://github.com/Mobsites/Blazor.Icon/tree/master/demo">here</a>
                for one approach.</small>
            </b>
        </p>
    </div>
</div>

@code {
    [CascadingParameter] MainLayout MainLayout { get; set; }

    Icon icon { get; set; }
}